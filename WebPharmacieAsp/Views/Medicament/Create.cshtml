

@model WebPharmacieAsp.Models.Medicament
@{
    ViewBag.Title = "Ajouter un médicament";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Medicament", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="mb-3">
        @Html.LabelFor(x => x.Reference, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Reference, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Reference, null, new { @class = "text-danger small" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(x => x.Nom, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Nom, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Nom, null, new { @class = "text-danger small" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.DateFabrication, new { @class = "form-label" })
        <input type="date" name="DateCreation" value="DateCreation" />
        @Html.ValidationMessageFor(x => x.DateFabrication, null, new { @class = "text-danger small" })
    </div>


    < div class="mb-3">
    @Html.LabelFor(x => x.PrixUnitaire, new { @class = "form-label" })
    @Html.TextBoxFor(x => x.PrixUnitaire, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.PrixUnitaire, null, new { @class = "text-danger small" })
    </ div >
    < div class= "mb-3" >
     @Html.LabelFor(x => x.Composition,new { @class = "form-label" })
    @Html.TextBoxFor(x => x.Composition, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Composition, null, new { @class = "text-danger small" })
    </ div > 
    <div class="col-log-6">


        @*<div class="mb-3">
            @Html.LabelFor(x => x.Image, new { @class = "form-label" })
            <input type="file" accept="image/*" id="Image" name="@Html.IdFor(x=>x.Image)" class="form-control" />
            @Html.ValidationMessageFor(x => x.Image, null, new { @class = "text-danger small" })
        </div>*@


        <div class="mb-3">
            @Html.LabelFor(x => x.Categories,new{ @class = "form-label" })
            @Html.DropDownListFor(x => x.IdCategorie, Model.Categories,new { @class = "form-select" })
            @Html.ValidationMessageFor(x => x.IdCategorie,null, new { @class = "text-danger small" })
        </div>


        <button type="submit" class="btn btn-success" style="width:100%">
            <i class="icon-save">
                Save
            </i>
        </button>
    </div>

}